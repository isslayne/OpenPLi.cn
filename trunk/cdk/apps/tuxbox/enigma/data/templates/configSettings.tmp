	<td><input style="color:#000000" name="vlcsport2" type="text" size="5" maxlength="5" value="#VLCSPORT2#"></td>
	<td><input style="color:#000000" name="vlcuser2" type="text" size="12" maxlength="256" value="#VLCUSER2#"></td>
	<td><input style="color:#000000" name="vlcpass2" type="text" size="12" maxlength="256" value="#VLCPASS2#"></td>
</tr>
<tr>
	<td><input style="color:#000000" name="vlcsrv3" type="text" size="15" maxlength="15" value="#VLCSRV3#"></td>	
	<td><input style="color:#000000" name="vlcpath3" type="text" size="15" maxlength="256" value="#VLCPATH3#"></td>
	<td><input style="color:#000000" name="vlcdrive3" type="text" size="10" maxlength="256" value="#VLCDRIVE3#"></td>
	<td><input style="color:#000000" name="vlcwport3" type="text" size="5" maxlength="5" value="#VLCWPORT3#"></td>
